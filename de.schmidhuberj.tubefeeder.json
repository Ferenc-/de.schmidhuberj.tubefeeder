{
    "app-id": "de.schmidhuberj.tubefeeder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "tubefeeder",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-data/tubefeeder:create",
        "--filesystem=xdg-cache/tubefeeder:create",
        "--filesystem=xdg-config/mpv:ro",
        "--filesystem=xdg-download"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/tubefeeder/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        "io.mpv.Mpv/io.mpv.Mpv.yml",
        "libadwaita.json",
        "gtk.json",
        {
            "name": "tubefeeder",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml",
                "cargo --offline build --release",
                "install -D target/release/tubefeeder /app/bin/tubefeeder",
                "install -d /app/lib/ffmpeg"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Schmiddiii/Tubefeeder.git",
		    "commit": "eff5173d87d55af232696e0dadd20e48d2b72326",
                    "branch": "gtk4v2"
		}, 
		{
		    "type": "patch",
		    "path": "yt-dlp-downloader.patch"
		},
		{
		    "type": "patch",
		    "path": "yt-dlp-player.patch"
		},
		{
		    "type": "patch",
		    "path": "internationalization.patch"
		},
                "cargo-sources.json"
            ],
            "post-install": [
                "install -D packaging/de.schmidhuberj.tubefeeder.appdata.xml /app/share/metainfo/de.schmidhuberj.tubefeeder.appdata.xml",
                "install -D packaging/tubefeeder.desktop /app/share/applications/de.schmidhuberj.tubefeeder.desktop",
                "install -D packaging/tubefeeder.png /app/share/icons/hicolor/512x512/apps/de.schmidhuberj.tubefeeder.png",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % mkdir -p /app/myshare/locale/%LC_MESSAGES/",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % cp 'po/locale/%LC_MESSAGES/de.schmidhuberj.tubefeeder.mo' /app/myshare/locale/%LC_MESSAGES/de.schmidhuberj.tubefeeder.mo"
            ]
        }
    ]
}
