{
    "app-id" : "de.schmidhuberj.tubefeeder",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": { "org.freedesktop.Platform.ffmpeg-full": {
        "directory": "lib/ffmpeg",
        "version": "21.08beta",
        "add-ld-path": "."
      }
    },
    "command": "tubefeeder",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
	"--socket=pulseaudio",
        "--device=dri",
        "--share=network",
	"--filesystem=xdg-data/tubefeeder:create:rw",
	"--filesystem=xdg-cache/tubefeeder:create:rw",
	"--filesystem=xdg-config/mpv:ro"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": ["--share=network"],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ],
        "env": {
            "RUST_BACKTRACE": "1"
        }
    },
    "modules" : [
        "io.mpv.Mpv/io.mpv.Mpv.yml",
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "archive",
		    "sha256": "80c7f015b8ed0888f0f6a5cb15015d120cdf0dfcacf9dddb06d4e93bd8ffef1f", 
                    "url": "https://gitlab.gnome.org/GNOME/libhandy/-/archive/1.0.3/libhandy-1.0.3.tar.gz"
                }
            ]
        },
        {
            "name" : "tubefeeder",
            "buildsystem" : "simple",
	    "build-commands": [
		    "cargo build --release",
		    "install -D target/release/tubefeeder /app/bin/tubefeeder"
	    ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/Schmiddiii/Tubefeeder.git",
		    "commit": "cea6d17d739e43a2d43ce6af51fbe32a80c428bd"
                }
            ],
	    "post-install": [
		    "install -D packaging/de.schmidhuberj.tubefeeder.appdata.xml /app/share/metainfo/de.schmidhuberj.tubefeeder.appdata.xml",
		    "install -D packaging/tubefeeder.desktop /app/share/applications/de.schmidhuberj.tubefeeder.desktop",
		    "install -D packaging/tubefeeder.png /app/share/icons/hicolor/512x512/apps/de.schmidhuberj.tubefeeder.png"
	    ]
        }
    ]
}

